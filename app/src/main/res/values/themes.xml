<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an            animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logoba</item>

        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.BosqueAntiguo</item>
    </style>

    <style name="Theme.BosqueAntiguo" parent="android:Theme.Material.Light.NoActionBar" />
</resources>